= form_for [:admin, @passenger_record], :url => admin_passenger_record_path(@passenger_record) do |f|

  %table.table.table-bordered
    %tr
      %td.location_name{:colspan => 6}
        %h4 旅客乘降明细表

    %tr
      %th 车牌号
      %th{:colspan => 2} 
        = @passenger_record.vehicle.paizhao

      %th 录入日期
      %th{:colspan => 2} 
        = @passenger_record.created_at.to_s(:human_zh_year)
    %tr
      %td 
      %td 人数
      %td 金额
      %td 
      %td 人数
      %td 金额



    - @passenger_record.passenger_record_details.go.each_with_index do |grd, index|
      %tr
        %td.location_name= grd.location_name
        %td.passenger_record_input= text_field_tag "passenger_count[][#{grd.id}]", "#{grd.passenger_count || 2}", :class => ""
        %td.passenger_record_input= text_field_tag "passenger_count[][#{grd.id}]", "#{grd.passenger_count || 0}", :class => ""
        %td.location_name= (grdr = @passenger_record.passenger_record_details.back[index]).location_name
        %td.passenger_record_input= text_field_tag "passenger_count[][#{grdr.id}]", "#{grdr.passenger_count || 2}", :class => ""
        %td.passenger_record_input= text_field_tag "passenger_count[][#{grdr.id}]", "#{grdr.passenger_count || 0}", :class => ""

    %tr
      %td 总计
      %td
      %td
      %td 总计 
      %td 
      %td
    %tr.sign_tr
      %td 签字
      %td{:colspan  => 2}
      %td 经理签字
      %td{:colspan => 2}


  - unless @print
    .actions
      = f.submit '保存', :class => "btn btn-primary"
      = link_to icon_link(:print), print_admin_passenger_record_path(@passenger_record), :class => "btn", :target => "_blank"
