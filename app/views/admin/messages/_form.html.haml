= form_for [:admin, @message], :class => "form form-horizontal", :multipart => true do |f|
  = control_group_helper "标题", "例如: 关于xxx的通知", f.object.errors[:title].first do
    = f.text_field :title, :class => "input-xxlarge"
  = control_group_helper "内容", "例如 ", f.object.errors[:content].first do
    = f.kindeditor :content, :class => "input-xxlarge"

  .actions
    = f.submit '保存', :class => "btn btn-primary"
    = link_to "返回", admin_messages_path, :class => "btn btn-primary"
