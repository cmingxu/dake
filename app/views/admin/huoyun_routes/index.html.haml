= render :partial => "admin/widgets/configuration_tab_bar", :locals => { :current_tab => "huoyun_routes" }

%legend 
  物流线路
  %span.pull-right
    = link_to icon_link(:plus) + "  新线路", new_admin_huoyun_route_path

%table.table.table-stripped
  %tr
    %th 发站
    %th 收站
    %th 开车时间
    %th 到站时间
    %th

  - @huoyun_routes.each do |huoyun_route|
    %tr
      %td= huoyun_route.from_huozhan.huozhan_name
      %td= huoyun_route.to_huozhan.huozhan_name
      %td= huoyun_route.fahuo_time
      %td= huoyun_route.daohuo_time
      %td
        = link_to icon_link(:search), edit_admin_huoyun_route_path(huoyun_route)
        = link_to icon_link(:trash), admin_huoyun_route_path(huoyun_route), :confirm => "此操作会删除物流线路？", :method => :delete
 

= paginate @huoyun_routes
