= form_for [:admin, @location], :class => "form form-horizontal" do |f|

  = control_group_helper "地点", "例如： 呼市，北京，敖汉", f.object.errors[:name].first do
    = f.text_field :name, :class => "input-xxlarge"


  = control_group_helper "负责人", "当地负责人姓名", f.object.errors[:fuzeren].first do
    = f.select(:fuzeren, options_from_collection_for_select(User.agents, "id", "name", @location.user_id), :class => "input-xxlarge")

  = control_group_helper "负责人地址", "负责人联系地址， 例如: 北京六里桥某某酒店", f.object.errors[:fuzeren_address].first do
    = f.text_field :fuzeren_address, :class => "input-xxlarge"
  .actions
    = f.submit '保存', :class => "btn btn-primary"
    = link_to "返回", admin_locations_path, :class => "btn"
