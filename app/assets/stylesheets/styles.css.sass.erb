// Import all the variables into the main css file.
@import "variables"

// I gather this file is a starting point for the project.
@import "bootstrap"

@import "compass"

// Include responsive Bootstrap styles
// @import "bootstrap-responsive";

#header
  position: fixed
  background-color: #476F9E
  color: white
  width: 100%
  height: 90px
  line-height: 130px
  padding-right: 20px
  padding-left: 20px
  h1
    float: left
    +inline-block
  ul.nav
    +horizontal-list-container
    > li
      +horizontal-list-item


#body
  padding-top: 170px
  background: url(<%= asset_path("background.png") %>) repeat

#footer
  min-height: 100px
  background-color: #0F2658
  color: white
  text-align: center
  padding-top: 10px

legend a
  font-size: 14px

input[type="text"]
  padding: 5px
  margin-top: 5px
  font-weight: bold
  font-size: 18px
  height: 30px
  line-height: 30px

.control-description
  font-style: italic
 
.control-label
  font-size: 16px


#search_form input[type="text"]
  padding: 5px
  margin-top: 5px
  font-weight: bold
  font-size: 18px
  height: 20px
  line-height: 20px

table.report td
  text-align: right

